echo " [•] Menu Pilihan : "
echo
echo " [1] Facebook "
echo " [2] Instagram            |•|====================|•| "
echo " [3] Twiter               |•|   CYFORANGCHIVER   |•| "
echo "                          |•|====================|•| "
echo " [G] Google "
echo " [0] Keluar "
echo
echo "Masukkan Pilihan : "
read pilih

     if [ $pilih = "1" ]
     then
clear
w3m https://www.facebook.com

     elif [ $pilih = "2" ]
     then
clear
w3m https://www.instagram.com/?hl=id

     elif [ $pilih = "3" ]
     then
clear
w3m https://www.twiter.com

     elif [ $pilih = "G" ] || [ $pilih = "g" ]
     then
clear
w3m https://www.google.com

     elif [ $pilih = "0" ]
     then
echo "• See You Sayank ;p "
sleep 3
clear
exit
     else
clear
echo "ERROR ,Kesalahan! "
echo
echo "[•] CYFORANGCHIVER "

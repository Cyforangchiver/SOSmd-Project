echo "• Loading.."
sleep 2
clear

echo " ______  ___      _________ "
sleep 0.06
echo " ___   |/  /_____ ______  /______________ ________ "
sleep 0.06
echo " __  /|_/ / _  _ \_  __  / __  ___/_  __ \__  ___/ "
sleep 0.06
echo " _  /  / /  /  __// /_/ /  _(__  ) / /_/ /_(__  ) "
sleep 0.06
echo " /_/  /_/   \___/ \__,_/   /____/  \____/ /____/ "
